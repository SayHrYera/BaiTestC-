@model App_Data.Models.staff

@{
    ViewData["Title"] = "Edit Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
        <h4 class="mb-4">Chỉnh Sửa Thông Tin Nhân Viên</h4>
        <hr />
        <form asp-action="EditStaff">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="StaffCode" class="form-label">Mã Nhân Viên</label>
                <input asp-for="StaffCode" class="form-control" readonly />
                <span asp-validation-for="StaffCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên Nhân Viên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AccountFe" class="form-label">Email FE</label>
                <input asp-for="AccountFe" class="form-control" />
                <span asp-validation-for="AccountFe" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AccountFpt" class="form-label">Email FPT</label>
                <input asp-for="AccountFpt" class="form-control" />
                <span asp-validation-for="AccountFpt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
    }

    .alert-danger {
        font-size: 0.875rem;
    }
</style>